<p id="notice"><%= notice %></p>

<h1>Listing Bidders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bidders.each do |bidder| %>
      <tr>
        <td><%= bidder.name %></td>
        <td><%= link_to 'Show', bidder %></td>
        <td><%= link_to 'Edit', edit_bidder_path(bidder) %></td>
        <td><%= link_to 'Destroy', bidder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bidder', new_bidder_path %>
