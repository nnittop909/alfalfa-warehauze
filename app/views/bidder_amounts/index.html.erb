<p id="notice"><%= notice %></p>

<h1>Listing Bidder Amounts</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bidder_amounts.each do |bidder_amount| %>
      <tr>
        <td><%= bidder_amount.amount %></td>
        <td><%= link_to 'Show', bidder_amount %></td>
        <td><%= link_to 'Edit', edit_bidder_amount_path(bidder_amount) %></td>
        <td><%= link_to 'Destroy', bidder_amount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

