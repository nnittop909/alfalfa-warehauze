<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>List of Locations</h4>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td><%= link_to location, location %></td>
              <td><%= link_to 'Edit', edit_location_path(location) %> | <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <div class="pull-right">
        <%= link_to 'New Location', new_location_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>
