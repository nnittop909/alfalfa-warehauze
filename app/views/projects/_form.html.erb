<%= simple_form_for(@project) do |f| %>

<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <% if @project.new_record? %>
        <h4>New Project</h4>
      <% else %>
        <h4>Update Project</h4>
      <% end %>
    </div>
    <div class="panel-body">
      <%= f.input :id_number, label: 'Project ID', input_html: {class: "input-sm"} %>
      <%= f.input :name, label: 'Project Name', input_html: {class: "input-sm"} %>
      <div class="row">
        <div class="col-md-12">
          <label>Location: </i></label>
          <%= f.association :location, label: false, input_html: {class: "input-sm"} %>
          <i><%= link_to 'New Location?', new_location_path, class: 'pull-right' %></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :start_date, as: :string, input_html: {class: "datepicker input-sm"} %>
        </div>
        <div class="col-md-6">
          <%= f.input :target_date,  as: :string, input_html: {class: "datepicker input-sm"} %>
        </div>
      </div>
      <%= f.association :contractors, input_html: {class: "input-sm"} %>
      <%= f.input :cost, label: 'Project Cost', input_html: {class: "input-sm"} %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary btn-sm pull-right" %>
      <%= link_to 'Cancel', projects_path, class: "btn btn-sm btn-warning pull-left" %>
    </div>
  </div>
</div>
<% end %>
