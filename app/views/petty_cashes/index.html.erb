<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h4 class="pull-left">Petty Cash Record</h4>
      <%= link_to 'Add Record', new_petty_cash_path, class: "btn btn-sm btn-primary pull-right" %>
    </div>
    <div class="box-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Cash Recipient</th>
            <th>Purpose</th>
            <th>Amount</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @petty_cashes.each do |petty_cash| %>
            <tr>
              <td><%= petty_cash.created_at.strftime("%B %d, %Y - %H:%M %p") %></td>
              <td><%= petty_cash.cash_recipient %></td>
              <td><%= link_to petty_cash.purpose, petty_cash %></td>
              <td><%= number_to_currency petty_cash.amount %></td>
              <td><%= link_to 'Edit', edit_petty_cash_path(petty_cash) %> | <%= link_to 'Delete', petty_cash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
