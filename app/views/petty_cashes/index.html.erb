<div class="col-md-8 col-md-offset-2">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h4 class="pull-left">Petty Cash Records</h4>
      <%= link_to 'New Petty cash', new_petty_cash_path, class: "btn btn-sm btn-primary pull-right" %>
    </div>
    <div class="box-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Cash on Hand</th>
            <th class="tex-muted">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @petty_cashes.order("created_at desc").each do |petty_cash| %>
            <tr>
              <td><%= link_to petty_cash.created_at.strftime("%B %e, %Y"), petty_cash %></td>
              <td><%= number_to_currency petty_cash.set_total %></td>
              <td><%= link_to 'Edit', edit_petty_cash_path(petty_cash) %> | <%= link_to 'Delete', petty_cash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
