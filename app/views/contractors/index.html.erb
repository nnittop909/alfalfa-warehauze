
<div class="row">
<div class="col-md-8 col-md-offset-2">
<div class="panel panel-default">
<div class="panel-heading">
  <h4>List of Contractors</h4>
</div>
<div class="panel-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Position</th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.full_name.upcase %></td>
        <td><%= link_to contractor.company, contractor %></td>
        <td><%= contractor.position %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %> | <%= link_to 'Delete', contractor, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="modal-footer">
<div class="pull-right">
<%= link_to 'New Contractor', new_contractor_path, class: 'btn btn-primary btn-sm' %>
</div>
</div>
</div>