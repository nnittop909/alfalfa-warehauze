<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Listing Reports</h4>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th class="text-muted">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @uploads.each do |upload| %>
            <tr>
              <td><%= upload.uploaded_file_file_name %></td>
              <td><%= upload.created_at.strftime("%B %e, %Y") %></td>
              <td><%= link_to 'Show', upload %> | <%= link_to 'Edit', edit_upload_path(upload) %> | <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <%= link_to 'New Report', new_upload_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>
