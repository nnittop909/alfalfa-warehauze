<%= simple_form_for(@equipment) do  |f| %>
  <%= f.error_notification %>
<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<% if @equipment.new_record? %>
				<h4>New Equipment</h4>
			<% else %>
				<h4>Update Equipment</h4>
			<% end %>
		</div>
	  <div class="panel-body">
	    <%= f.input :description, input_html: {class: "input-sm"} %>
	    <%= f.input :plate_number, input_html: {class: "input-sm"} %>
	    <%= f.input :operator_name, label: 'Operator', input_html: {class: "input-sm"} %>
	  </div>
	  <div class="modal-footer">
	  	<div class="pull-left">
	  		<%= link_to "Cancel", equipments_path, class: "btn btn-warning btn-sm" %>
	  	</div>
		  <div class="pull-right">
		  	<% if @equipment.new_record? %>
		    	<%= f.submit "Save", class: "btn btn-primary btn-sm" %>
				<% else %>
		    	<%= f.submit "Update", class: "btn btn-primary btn-sm" %>
				<% end %>
		  </div>
		</div>
	</div>
</div>
<% end %>
