<p id="notice"><%= notice %></p>

<h1>Listing Operators</h1>

<table>
  <thead>
    <tr>
      <th>Equipment</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.equipment %></td>
        <td><%= operator.first_name %></td>
        <td><%= operator.last_name %></td>
        <td><%= link_to 'Show', operator %></td>
        <td><%= link_to 'Edit', edit_operator_path(operator) %></td>
        <td><%= link_to 'Destroy', operator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

