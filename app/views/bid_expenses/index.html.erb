<p id="notice"><%= notice %></p>

<h1>Listing Bid Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_expenses.each do |bid_expense| %>
      <tr>
        <td><%= bid_expense.description %></td>
        <td><%= link_to 'Show', bid_expense %></td>
        <td><%= link_to 'Edit', edit_bid_expense_path(bid_expense) %></td>
        <td><%= link_to 'Destroy', bid_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

